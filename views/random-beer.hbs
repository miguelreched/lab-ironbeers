<div id="random-beer">

    <img src="{{this.beer.image_url}}" alt="" height="200px" id="random-img">

    <div id="random-info">
        <h3>{{this.beer.name}}</h3>
        <h4 id="random-tagline">{{this.tagline}}</h4>
        <p>{{this.beer.description}}</p>
        <h4>Food Pairing</h4>
        

        <ul>
            {{#each this.beer.food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>

        <h4>Brewers Tips</h4>
        <p>{{this.beer.brewers_tips}}</p>

    </div>

</div>

